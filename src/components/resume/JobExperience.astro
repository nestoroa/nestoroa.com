---
export interface JobExperienceProps {
  company: string;
  position: string;
  location: string;
  startDate: string;
  endDate: string;
  duties: string[];
}

const { company, position, location, startDate, endDate, duties } = Astro.props;
---
<section class="p-4 max-w-[90ch] space-y-2">
    <h2 class="text-3xl font-bold">{position}</h2>
    <h3 class="text-2xl font-semibold">{company} - {location}</h3>
    <p class="italic">{startDate} - {endDate}</p>
    <ul class="list-disc list-inside">
      {duties.map((duty) => (
        <li class="ml-4">{duty}</li>
      ))}
    </ul>
</section>